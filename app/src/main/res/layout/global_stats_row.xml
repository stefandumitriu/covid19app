<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/globalCardLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/static_country_name_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/country_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/country_name_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/static_country_name_global"
                app:layout_constraintTop_toBottomOf="@+id/static_country_name_global" />

            <TextView
                android:id="@+id/static_total_cases_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/total_no_of_cases"
                app:layout_constraintStart_toStartOf="@+id/country_name_global"
                app:layout_constraintTop_toBottomOf="@+id/country_name_global" />

            <TextView
                android:id="@+id/static_new_cases_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/new_no_of_cases"
                app:layout_constraintStart_toStartOf="@+id/number_total_cases_global"
                app:layout_constraintTop_toBottomOf="@+id/number_total_cases_global" />

            <TextView
                android:id="@+id/number_new_cases_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/static_new_cases_global"
                app:layout_constraintTop_toBottomOf="@+id/static_new_cases_global" />

            <TextView
                android:id="@+id/number_total_cases_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/static_total_cases_global"
                app:layout_constraintTop_toBottomOf="@+id/static_total_cases_global" />

            <TextView
                android:id="@+id/static_casesperm_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/casesperm"
                app:layout_constraintStart_toStartOf="@+id/number_new_cases_global"
                app:layout_constraintTop_toBottomOf="@+id/number_new_cases_global" />

            <TextView
                android:id="@+id/number_casesperm_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/static_casesperm_global"
                app:layout_constraintTop_toBottomOf="@+id/static_casesperm_global" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>